<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/spacing_normal"
    android:layout_gravity="center_vertical"
    android:background="@color/backgroundDark">

    <ImageView
        android:id="@+id/img_poster_favorite"
        android:layout_width="@dimen/img_poster_size"
        android:layout_height="@dimen/img_poster_size"
        android:layout_margin="@dimen/spacing_normal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_normal">

        <TextView
            android:id="@+id/movie_item_title_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textSize="@dimen/title_size_item"
            android:textColor="@color/colorText"

            />

        <TextView
            android:id="@+id/txt_genre_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textSize="@dimen/txt_detail"
            android:layout_marginBottom="@dimen/spacing_normal"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_normal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_white_18dp"
                android:tint="@color/colorPrimary"/>

            <TextView
                android:id="@+id/txt_rating_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_micro"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_normal">

            <TextView
                android:id="@+id/txt_metascore_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:background="@color/colorPrimary"
                android:padding="@dimen/spacing_micro"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points"
                android:textColor="@color/colorText"
                android:layout_marginLeft="@dimen/spacing_micro"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/spacing_normal">

            <TextView
                android:id="@+id/txt_votos_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:padding="@dimen/spacing_micro"
                android:background="@color/colorPrimary"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/votos"
                android:textColor="@color/colorText"
                android:layout_marginLeft="@dimen/spacing_micro"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>